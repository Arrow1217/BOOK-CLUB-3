    <script>
        function handleSubmit(event) {
            event.preventDefault();
            const formData = new FormData(event.target);
            const data = Object.fromEntries(formData);

            document.getElementById('outputText').innerHTML =
                '<strong>Form Submitted!</strong><br>' +
                'Name: ' + data.name + '<br>' +
                'Email: ' + data.email + '<br>' +
                'Favorite Language: ' + data.language + '<br>' +
                'Message: ' + data.message;

            document.getElementById('output').style.display = 'block';
        }

        function changeTheme() {
            const body = document.body;
            const container = document.querySelector('.container');

            if (body.style.backgroundColor === 'rgb(33, 37, 41)') {
                // Light theme
                body.style.backgroundColor = '#f5f5f5';
                body.style.color = '#333';
                container.style.backgroundColor = 'white';
            } else {
                // Dark theme
                body.style.backgroundColor = '#212529';
                body.style.color = '#fff';
                container.style.backgroundColor = '#343a40';
            }
        }

        function showTime() {
            const now = new Date();
            const timeString = now.toLocaleString();

            document.getElementById('outputText').innerHTML =
                '<strong>Current Time:</strong><br>' + timeString;
            document.getElementById('output').style.display = 'block';
        }

        // Add some interactivity on page load
        document.addEventListener('DOMContentLoaded', function () {
            console.log('HTML page loaded successfully!');

            // Add click animation to buttons
            const buttons = document.querySelectorAll('.button');
            buttons.forEach(button => {
                button.addEventListener('click', function () {
                    this.style.transform = 'scale(0.95)';
                    setTimeout(() => {
                        this.style.transform = 'scale(1)';
                    }, 100);
                });
            });
        });
    </script>
